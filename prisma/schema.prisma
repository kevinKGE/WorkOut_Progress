model Workout {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  date        DateTime
  userId      Int
  notes       String?
  user        User       @relation(fields: [userId], references: [id])
  exercices   Exercice[]
}

model Exercice {
  id                     Int       @id @default(autoincrement())
  name                   String
  exerciceType           String
  description            String
  seriesRepsWithWeight   Json
  rest                   Int
  notes                  String
  workoutId              Int
  workout                Workout   @relation(fields: [workoutId], references: [id])
}